     <div class="container-fluid">
       <div class="container" style="box-shadow: 0 0 2px black; height: 100vh; width: 80vw; padding: 20px;">
          <form action="" method="POST" style="width:50vw; min-width:300px;">
             <div class="row">
                <div class="col">
                  <label class="form-label">First Name:</label>
                  <input type="text" class="form-control" name="fname" placeholder="Elissa">
                </div>
                <div class="col">
                  <label class="form-label">Last Name:</label>
                  <input type="text" class="form-control" name="lname" placeholder="DUSABE">
                </div>
             </div>
             <div>
                <label class="form-label">Email:</label>
                <input type="text" class="form-control" name="email" placeholder="name@example.com">
              </div>
  
              <div>
                 <label class="form-label">Password: </label>
