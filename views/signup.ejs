                 <input type="text" class="form-control" name="github" placeholder="GitHub link">
               </div>
               <div>
                 <label class="form-label">Linkedin: </label>
                 <input type="text" class="form-control" name="linkedin" placeholder="Linkedin link">
               </div>
               <div class="mt-3 d-flex justify-content-center">
                    <button class="btn btn-primary" onclick="document.getElementById('fileInput').click()">Upload Resume</button>
                    <input type="file" id="fileInput" style="display: none"  required>
                </div>
               <button type="submit" class="btn btn-primary mt-2">Sign up</button>
          </form>
       </div>
    </div>


<script>
     const form = document.querySelector('form')

     const emailError = document.querySelector('.email.error')
